{ 
    "debug_integrity": true,
    "check_delay" : 3,
	"cnx": { 
		"SUB_orchester_master" :  "tcp://%(master_ip)s:9563",
		"PUSH_any_orchester" : "tcp://%(ext_ip)s:9576",
		"PUSH_any_tracker" :  "ipc://tracker_in",
		"PUB_tracker_any" :  "ipc://tracker_out",

		"PUSH_orchester_cpu" : "ipc://socksher",
		"PUSH_orchester_ping" : "ipc:///tmp/sock2",
		"PUSH_orchester_proc" : "ipc:///tmp/sock3",

		"PUSH_ping_csvw" : "tcp://%(ext_ip)s:%(csvw_port)s",
		"PUSH_cpu_csvw" : "tcp://%(ext_ip)s:%(csvw_port)s",
		"PUSH_cpu_rrd" : "ipc://cpu_rrd",
		"PUSH_proc_csvw" : "tcp://%(ext_ip)s:%(csvw_port)s"

	},
    "csvw_port" : "9558",
	"bounce_to" : 
        { "cpu" : [ {
            "where" : "localhost",
            "type" : "cpu"
            } ],
        "ping" : [ {
            "where" : "localhost",
            "type" : "ping"
        }],

        "proc" : [ {
            "where" : "localhost",
            "type" : "proc"
        }]
    } ,
   
   "master_ip" : "127.0.0.1",
    "ext_ip" : "127.0.0.1",
	"state_keeper": { "backend":
		{ 
			"_default_" : { 
				"uri" : "mongodb://localhost/",
				"db" : "statekeeper"
			},
			"state": {
				"col" : "state"
			}
		}
	},
	"circus_cfg" : "edge.ini",
	"polling_time_ms" : 3500,
	"max_retry" : 2,
	"timeout" : 10,
	"logging" : { 
		"version" : 1,
		"disable_existing_loggers" : true,
		"formatters": {
			"verbose": {
				"format": "%(asctime)s [%(levelname)s] [%(module)s:%(lineno)d]  %(process)d %(message)s"
			},
			"simple": {
				"format": "[%(levelname)s] [%(module)s:l%(lineno)d] %(process)d %(message)s"
			}
		},
		"handlers" : { 
			"console" : { 
				"level" : "DEBUG",
				"class" : "logging.StreamHandler",
				"formatter" : "verbose"
			},
			"syslog" : { 
				"level" : "DEBUG",
				"formatter" : "simple",
				"address" : "/dev/log",
				"class" : "logging.handlers.SysLogHandler"
			}
		},
		"loggers" : { 
			"dev" : { 
				"level" : "WARNING",
                "disable_existing_loggers" : true,
				"propagate" : 0,
				"handlers" : ["syslog" ]
			},
			"cpu" : { 
				"level" : "INFO",
                "disable_existing_loggers" : true,
				"propagate" : 0,
				"handlers" : ["syslog" ]
			},
			"csvw" : { 
				"level" : "INFO",
                "disable_existing_loggers" : true,
				"propagate" : 0,
				"handlers" : ["syslog" ]
			},
			"orchester" : { 
				"level" : "INFO",
                "disable_existing_loggers" : true,
				"propagate" : 0,
				"handlers" : ["syslog" ]
			},
			"tracker" : { 
				"level" : "WARNING",
                "disable_existing_loggers" : true,
				"propagate" : 0,
				"handlers" : ["syslog" ]
			}
		},
		"root" : { 
			"level" : "INFO",
            "disable_existing_loggers" : true,
			"propagate" : 0,
			"handlers" : [  "syslog" ]
		}
	}
}
